<head>
        <%- include('head'); %>
</head>
<body> 
    <div class="mt-7 container">
        <h3 class="text-dr-br">Employees view</h3>
        <a class="text-dr-br" href="/admin"><i class="fas fa-arrow-left"></i> Back to Admin</a>
        <div class="row mt-5">
            <div class="col-lg-8 col-md-8 col-sm-8"><h4 class="text-dr-br">Employees</h4></div>
            <div class="col-lg-4 col-md-4 col-sm-4"><a href="/employee_add" class="float-right btn btn-bl mb-1">Add Employees</a></div>
        </div>
        
        <table class="table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Job Title</th>
                <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(function(employee){ %>
                    <%- include('employee_table', employee); %>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="https://kit.fontawesome.com/7ce695a48c.js" crossorigin="anonymous"></script>
</body>