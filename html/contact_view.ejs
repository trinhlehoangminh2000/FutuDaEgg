<html>
    <head>
        <%- include('head'); %>
    </head>
    
    <body>
        <div class="container mt-9">    
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <h5 class="text-dr-br">From:</h5>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <p><%= forename %></p>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <h5 class="text-dr-br">Email:</h5>             
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <p><%= email %></p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <h5 class="text-dr-br">Subject:</h5>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    <p><%= subject %></p>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <h5 class="text-dr-br">Received on:</h5>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    <p><%= dateRecieved %></p>
                </div>
            </div>
            <hr>
            <div class="row mt-3">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h5 class="text-dr-br">Message:</h4>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-lg-2 col-md-2 col-sm-2">
                </div>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    <p><%= message %></p>
                </div>
            </div>
            <div class="row">
                <a class="text-dr-br text-align-right" href="/contact_list">
                    <h5><i class="fas fa-arrow-left"></i> Back to message managing</h5>
                </a>
            </div>
        </div>
        <script src="https://kit.fontawesome.com/7ce695a48c.js" crossorigin="anonymous"></script>
    </body>
</html>