    <head>
        <%- include('head'); %>
    </head>
    
    <body>
        <!-- Navigation bar -->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-gr-transparent">
            <%- include('navbar'); %>
        </nav>
        <div class="container mt-9">    
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <img class="img-fluid" src="<%= img %>">
                </div>
